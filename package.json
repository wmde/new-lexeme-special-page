{
	"name": "new-lexeme-special-page",
	"private": true,
	"version": "0.0.1",
	"description": "Form for the upcoming revival of the NewLexeme special page on Wikidata",
	"main": "main.ts",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"prepare": "husky install",
		"test": "npm-run-all test:*",
		"lint": "run-s lint:*",
		"lint:config": "prettier --check '**/*.{json,yml,yaml}'",
		"lint:script": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
		"lint:style": "stylelint '**/*.{css,scss,vue}'",
		"fix": "run-s fix:*",
		"fix:config": "prettier --write '**/*.{json,yml,yaml}'",
		"fix:script": "eslint --fix --ext .js,.ts,.vue --ignore-path .gitignore .",
		"fix:style": "stylelint --fix '**/*.{css,scss,vue}'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wmde/new-lexeme-special-page.git"
	},
	"keywords": [
		"Wikidata"
	],
	"author": "The Wikidata team",
	"license": "GPL-2.0-or-later",
	"bugs": {
		"url": "https://phabricator.wikimedia.org/project/board/5674/"
	},
	"homepage": "https://github.com/wmde/new-lexeme-special-page#readme",
	"dependencies": {
		"@vue/compat": "^3.2.30",
		"@wmde/wikit-vue-components": "^2.1.0-alpha.11",
		"vue": "^3.2.30"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.10.2",
		"@typescript-eslint/parser": "^5.10.2",
		"@vitejs/plugin-vue": "^2.1.0",
		"@vue/eslint-config-typescript": "^10.0.0",
		"@wmde/eslint-config-wikimedia-typescript": "^0.2.1",
		"eslint": "^8.8.0",
		"eslint-config-wikimedia": "^0.21.0",
		"eslint-plugin-vue": "^8.4.1",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.3",
		"npm-run-all": "^4.1.5",
		"prettier": "2.5.1",
		"sass": "^1.49.7",
		"stylelint": "^14.3.0",
		"stylelint-config-recommended-vue": "^1.1.0",
		"stylelint-config-standard-scss": "^3.0.0",
		"stylelint-config-wikimedia": "^0.11.1",
		"stylelint-use-logical-spec": "^3.2.2",
		"typescript": "^4.5.5",
		"vite": "^2.7.13",
		"vue-tsc": "^0.31.2"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"eslint"
		],
		"*.{json,yml,yaml}": [
			"prettier --check"
		],
		"*.{css,scss,vue}": [
			"stylelint"
		]
	}
}
